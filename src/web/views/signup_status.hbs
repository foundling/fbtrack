<section class="container">

  {{#if error}}
    <h1 class="error">
      An error occurred: <span class="error-msg">{{error}}</span>
    </h1>
  {{else}}
    <h1 class="success">Authorization for participant {{ participantId }} was a Success!</h1>
  {{/if}}

</section>

<button id="quit">Quit<button>

<script type="text/javascript">
  document.getElementById('quit').addEventListener('click', function() { window.close() })
</script>
